{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:js-app",
    "group:allNonMajor"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        ".babelrc.json"
      ],
      "matchStrings": [
        "\"corejs\":\\s*\"(?<currentValue>\\S+)\""
      ],
      "packageNameTemplate": "core-js",
      "datasourceTemplate": "npm",
      "versioningTemplate": "npm"
    }
  ]
}
